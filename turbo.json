{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"],
      "env": ["NEXT_PUBLIC_API_URL"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "start:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "dependsOn": ["^build"]
    },
    "start:test": {},
    "test:e2e": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "db:migrate": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "db:seed": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
